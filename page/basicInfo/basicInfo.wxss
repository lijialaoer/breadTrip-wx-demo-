/* page/basicInfo/basicInfo.wxss */
.header{
  color: #fff;
  position: relative;
}
.header image{
  height: 400rpx;
  vertical-align: bottom;
}
 .mask{
  width: 100%;
  height: 120rpx;
  position: absolute;
  left:0;
  bottom:0;
  background-image: linear-gradient(to top,rgba(0,0,0,0.6),rgba(0,0,0,0));
}
 .title{
  position: absolute;
  left:30rpx;
  bottom:50rpx;

}
.city_name{
  font-size: 60rpx;
  font-weight: 700;
}
.detail{
  font-size: 22rpx;
  color:rgba(255,255,255,0.8);
}
.hottrip{
  margin-bottom: 30rpx;
  text-align: center;
}
.hot-title{
  font-size: 35rpx;
  font-weight: bold;
  color:#5c5c5c;
  margin:40rpx;
  display: block;
}
.hot-title::after,
.hot-title::before{
  content: "";
  display: inline-block;
  width: 146rpx;
  height: 1rpx;
  background:#d8d7d7;
  vertical-align: middle;
}
.basicInfo .binfo{
  margin:40rpx 20rpx;
  position: relative;
}
.basicInfo .stitle{
  font-size:30rpx;
  line-height: 40rpx;
  margin:30rpx 0 10rpx;
}

.basicInfo .desc{
  color:#7b7a7a;
  font-size: 27rpx;
}
.arrow{
  position: absolute;
  top:60%;
  width: 30rpx;
  height: 30rpx;
  right: 25rpx;
}