/* page/destination/destination.wxss */
page{
  background-color: #fbf7ed;
}
.header{
  color: #fff;
  position: relative;
}
.header image{
  height: 400rpx;
  vertical-align: bottom;
}
.header .mask{
  width: 100%;
  height: 120rpx;
  position: absolute;
  left:0;
  bottom:10px;
  background-image: linear-gradient(to top,rgba(0,0,0,0.6),rgba(0,0,0,0));
}
.header .title{
  position: absolute;
  left:30rpx;
  bottom:50rpx;

}
.city_name{
  font-size: 60rpx;
  font-weight: 700;
}
.detail{
  font-size: 22rpx;
  color:rgba(255,255,255,0.8);
}
.nav{
  padding:40rpx 0;
  border-radius: 20rpx 20rpx 0 0 ;
  background-color: #fbf7ed;
  position: relative;
  top:-20rpx;
  z-index: 2;
}
.img{
  width:88rpx;
  height: 94rpx;
  margin:0 40rpx;
}
.hottrip{
  margin-bottom: 30rpx;
  text-align: center;
}
.hot-title{
  font-size: 28rpx;
  font-weight: bold;
  color:#5c5c5c;
  margin:0 40rpx;
}
.hot-title::after,
.hot-title::before{
  content: "";
  display: inline-block;
  width: 146rpx;
  height: 1rpx;
  background:#d8d7d7;
  vertical-align: middle;
}
.list{
  padding:0 20rpx;
  margin-bottom: 28rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
}
.poi{
  margin-bottom: 12rpx;
  position: relative;

}
.poi image{
  width: 349rpx;
  height: 349rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}
.poi  .mask{
  width: 100%;
  height: 150rpx;
  background-image: linear-gradient(to top,rgba(0,0,0,0.8),rgba(0,0,0,0));
  position: absolute;
  left:0;
  bottom:0;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.poi  .title{
  width: calc(100% - 28rpx);
  position: absolute;
  left:28rpx;
  bottom:20rpx;
  color:#fff;
  font-weight: bold;
}
.title .name{
  font-size:32rpx;
  padding-right: 28rpx;
}
.m-rating{
  float: left;
}
.m-rating image{
  width: 16rpx;
  height: 16rpx;
  margin-right: 8rpx;
  border-radius: 8rpx;
  vertical-align: baseline;
}
.rating text{
  font-size: 18rpx;
  color:rgba(255,255,255,.8);
  margin-left: 10rpx;
}
.allbtn{
  height: 80rpx;
  margin:0 20rpx 40rpx;
  border:1rpx solid #b0b0b0;
  border-radius: 80rpx;
  font-size:30rpx;
  color:#999;
  text-align: center;
  line-height: 80rpx;
}



