/* page/explore/explore.wxss */
.title{
  margin:20rpx;
  font-size: 30rpx;
  color:#5c5c5c;
}
.list{
  padding:0 20rpx;
  margin-bottom:50rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
}
.poi{
   margin-bottom: 12rpx;
  position: relative;

}
.poi image{
  width: 349rpx;
  height: 349rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}
.poi  .mask{
  width: 100%;
  height: 80rpx;
  background-image: linear-gradient(to top,rgba(0,0,0,0.8),rgba(0,0,0,0));
  position: absolute;
  left:0;
  bottom:0;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.poi  .name{
  width: 100%;
  position: absolute;
  left:28rpx;
  bottom:24rpx;
  font-size: 40rpx;
  color:#fff;
  font-weight: bold;
 
}